

<script src="~/Scripts/angular.min.js"></script>
<script src="~/Scripts/bootstrap.js"></script>
<script src="~/Scripts/ui-bootstrap-tpls-2.5.0.min.js"></script>
<script src="~/Scripts/Controller/RegisterController.js" type="text/javascript"></script>
<script src="~/Scripts/Factory/Registerfactory.js"></script>
<div class="container-fluid bodyheight">
    <div class="row padded-slide-lg">
        <div ng-app="myApp">
            <div class="col-md-4" ng-controller="RegisterCtrl">
                <div class="page-header">
                    <h5>Account Creation</h5>
                </div>

                <div class="text-left">
                    <button class="btn btn-success btn-lg mar-tbmd" ng-click="OpenPopup();">
                        <i class="fa fa-user-plus"></i> Register
                    </button>
                </div>
                <div class="text-right">
                    <button class="btn btn-success btn-lg mar-tbmd">
                        <i class="fa fa-user-plus"></i> Login
                    </button>
                </div>
                <div class="modal fade" id="registerpopup" tabindex="-1" role="dialog" aria-labelledby="basicModal" aria-hidden="true">
                    <div class="modal-dialog modal-lg">
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                                <h5 class="modal-title"><i class="fa fa-user-plus"></i> Register</h5>
                            </div>
                            <div class="modal-body">
                                <form role="form" name="UserDetailsForm" novalidate>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label for="UserName" class="">User name:<span class="required">*</span></label>
                                                <input type="text" value="" name="UserName" ng-model="user.UserName" ng-maxlength="50" id="UserName"
                                                       ng-blur="CheckUniqueUsername(user.UserName)" data-val="true" class="form-control" placeholder="Username" required>
                                                <span style="color:Red" ng-show="UserDetailsForm.UserName.$error">
                                                    <span ng-show="submitted && UserDetailsForm.UserName.$error.required">Username is required</span>
                                                    <span ng-show="submitted && UserDetailsForm.UserName.$error.maxlength">Should not contain more than 50 characters</span>
                                                    <span ng-show="!isUniqueUsername"> Username already registered </span>
                                                </span>
                                            </div>
                                            <div class="form-group">
                                                <label for="Email" class="">Email:<span class="required">*</span></label>
                                                <input type="email" value="" name="email1" ng-model="user.Email" ng-maxlength="50" id="Email"
                                                       ng-blur="CheckUnique(user.Email)" data-val="true" class="form-control" placeholder="Email Address" required>
                                                <span style="color:Red" ng-show="UserDetailsForm.email1.$error">
                                                    <span ng-show="submitted && UserDetailsForm.email1.$error.required">Email Address is required</span>
                                                    <span ng-show="submitted && UserDetailsForm.email1.$error.email">Incorrect Email Format</span>
                                                    <span ng-show="submitted && UserDetailsForm.email1.$error.maxlength">Should not contain more than 50 characters</span>
                                                    <span ng-show="!isUnique"> Email already registered </span>
                                                </span>
                                            </div> 
                                            <div class="form-group">
                                                        <label for="Password" class="">Password:<span class="required">*</span></label>
                                                        <input type="password" value="" name="password1" ng-model="user.Password" ng-maxlength="20"
                                                               ng-minlength="8" id="Password" data-val="true" class="form-control" placeholder="Password"
                                                               ng-cut="$event.preventDefault()" ng-copy="$event.preventDefault()" ng-paste="$event.preventDefault()" required>
                                                        <span style="color: Red" ng-show="UserDetailsForm.password1.$error">
                                                            <span ng-show="submitted && UserDetailsForm.password1.$error.required">Password is required</span>
                                                            <span ng-show="submitted && UserDetailsForm.password1.$error.maxlength">Password Length should be 8-20 characters</span>
                                                            <span ng-show="submitted && UserDetailsForm.password1.$error.minlength">Password Length should be 8-20 characters</span>

                                                        </span>
                                                        </div>
                                      </div>

                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label for="ConfirmPassword" class="text-right">Confirm password:<span class="required">*</span></label>
                                                <input type="password" value="" name="password2" ng-model="user.password2"
                                                       compareto="user.Password" ng-maxlength="20" ng-minlength="8" id="ConfirmPassword"
                                                       data-val="true" class="form-control" placeholder="Confirm Password" ng-cut="$event.preventDefault()"
                                                       ng-copy="$event.preventDefault()" ng-paste="$event.preventDefault()" required>
                                                <span style="color: Red" ng-show="UserDetailsForm.password2.$error">
                                                    <span ng-show="submitted && UserDetailsForm.password2.$error.required">Enter the same password again</span>
                                                    <span ng-show="submitted && UserDetailsForm.password2.$error.maxlength">Password Length should be 8-20 characters</span>
                                                    <span ng-show="submitted && UserDetailsForm.password2.$error.minlength">Password Length should be 8-20 characters</span>
                                                    <span ng-show="submitted && UserDetailsForm.password2.$error.compareto">Passwords do not match</span>
                                                </span>

                                            </div>


                                            <div class="form-group">
                                                <label for="Category" class="text-right">Category<span class="required">*</span></label>
                                                <select name=" Category" id="Category" class="form-control" data-ng-model="data.Category"
                                                        data-ng-options="c.category_id as c.category_name for c in GetCategoryoption">

                                                    <option value="">--Select </option>
                                                </select><br />
                                            </div>
                                            <div class="form-group">
                                                <label for="Category" class="text-right">Loaction<span class="required">*</span></label>
                                                <select name=" Location" id="Location" class="form-control" data-ng-model="data.Location"
                                                        data-ng-options="l.location_id as l.location_name for l in GetLocationoption">

                                                    <option value="">--Select </option>
                                                </select><br />

                                            </div>



                                        </div>

                                        </div>
                                   
                                </form>
                            </div>


                            <div class="modal-footer">
                                <button class="btn btn-primary" ng-click="RegisterUser()"><i class="fa fa-thumbs-up"></i> Register</button>
                            </div>
                        </div>
                    </div>
                </div>


                
        </div>
    </div>
        </div>
    </div>
